; Test case for the 2D sheared bubble

CaseName ShearedBubble2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-2
	maxCo 0.25
	maxTime 5

	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
	numInnerIterations 2
	numPressureCorrections 2
	smoothingKernelRadius 0.03
}

Properties
{
	rho1 1
	rho2 1
	mu1 0.01
	mu2 0.01
	sigma 0.07
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m,gamma,rho,mu
}

System
{
  fileWriteFrequency 30
  consoleOutputFrequency 1
}
