; Test case for the 2D falling droplet into liquid

CaseName FallingDropletIntoLiquid2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-3
	maxCo 0.25
	maxTime 4

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.3
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.02
}

Properties
{
	rho1 1.2
	rho2 998
	mu1 1.846e-5
	mu2 8.94e-4
	sigma 0.07
	g (0,-9.8065)
}

Grid
{
	type rectilinear
	nCellsI 200
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u,n
	scalarFields p,pCorr,m,gamma,rho,mu,kappa,gammaTilde
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
