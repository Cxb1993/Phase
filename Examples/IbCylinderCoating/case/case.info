; Test case for the 2D immersed boundary cylinder coating

CaseName ImmersedBoundaryCylinderCoating2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1.5e-2
	maxCo 0.3
	maxTime 100

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 2
	smoothingKernelRadius 0.0201
}

Properties
{
	rho1 998
	rho2 958
	mu1 8.94e-4
	mu2 9e-3
	sigma 0.0276
	g (0,-9.81)
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.002
	spacingY 0.002
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields rho,mu,cell_status,p,pCorr,gamma
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
