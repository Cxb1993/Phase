; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-3
	maxCo 0.8
	maxTime 80

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 1
	smoothingKernelRadius 0.0401
}

Properties
{
	rho1 998
	rho2 1.225
	mu1 8.94e-4
	mu2 1.81e-5
	sigma 0.0762
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 120
	nCellsY 80

	; Rectilinear parameters
	width 3
	height 2
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields rho,mu,cell_status,p,pCorr
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
