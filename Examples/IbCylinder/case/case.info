; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-2
	maxCo 0.8
	maxTime 1000

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 1
	smoothingKernelRadius 0.0401
}

LinearAlgebra
{
	uEqn
	{
		lib hypre
		iluFill 1
		maxPreconditionerUses 100
	}

	pEqn
	{
		lib hypre
		iluFill 4
		maxPreconditionerUses 100
	}

	pCorrEqn
	{
		lib hypre
		iluFill 4
		maxPreconditionerUses 100
	}
}

Properties
{
	rho 1
	mu 0.01 ; Re = 100
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 200
	nCellsY 100

	; Rectilinear parameters
	width 10
	height 5
	partitionBufferWidth 4

	;refineX (10,20)
	;refineY (20,30)
}

Viewer
{
	vectorFields u
	scalarFields p
}

System
{
  fileWriteFrequency 50
  consoleOutputFrequency 1
}
