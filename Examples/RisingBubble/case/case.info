; Test case for the 2D rising bubble

CaseName RisingBubble2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 0.5e-3
	maxCo 0.3
	maxTime 2

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
	numInnerIterations 3
	numPressureCorrections 1

	smoothingKernelRadius 0.028
}

Properties
{
	rho1 998
	rho2 1.2
 	mu1 8.94e-4
	mu2 1.846e-5
	sigma 0.762
	g (0,-9.8065)

	advancingContactAngle 150
	recedingContactAngle 150
}

Grid
{
	type rectilinear
	nCellsI 50
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.02
	spacingY 0.02
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
