; Test case for the 2D rising bubble

CaseName RisingBubble2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 7.5e-5
	maxCo 1
	maxTime 0.2

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.25
	numInnerIterations 1
	numPressureCorrections 4

	smoothingKernelRadius 0.06
	surfaceTensionModel CELESTE
}

Properties
{
	rho1 998
	rho2 1.225
 	mu1 8.94e-4
	mu2 1.846e-5
	sigma 0.0762
	g (0,-9.8065)

	advancingContactAngle 150
	recedingContactAngle 150
}

Grid
{
	type rectilinear
	nCellsX 50
	nCellsY 100

	width 1
	height 2
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
