; Test case for the 2D Channel

CaseName Channel2D

Solver
{
	timeDependent Off
	maxIterations 100
	timeStep 0.1
	maxTime 2
	maxCo 0.8

	numInnerIterations 1
	numPressureCorrections 2
	momentumRelaxation 1
	pressureCorrectionRelaxation 0.7
}

LinearAlgebra
{
  uEqn
  {
    maxIterations 50
    tolerance 1e-12
    iluFill 1
  }

  pCorrEqn
  {
    maxIterations 300
    tolerance 1e-15
    iluFill 2
  }

  pEqn
  {
    maxIterations 300
    tolerance 1e-15
    iluFill 6
  }
}

Properties
{
	rho 1.2
	mu 1e-2
	g (0,0)
	gamma 0.001
}

Grid
{
	type rectilinear
	nCellsX 80
	nCellsY 40

	; Rectilinear parameters
	width 0.8
	height 0.4
}

Viewer
{
	type tecplot
	vectorFields u,gradP
	scalarFields p,pCorr,m
}

System
{
  fileWriteFrequency 10
}
