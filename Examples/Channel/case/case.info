; Test case for the 2D Channel

CaseName Channel2D

Solver
{
	timeDependent Off
	maxIterations 100
	timeStep 0.1
	maxTime 1
	maxCo 0.8

	numInnerIterations 1
	numPressureCorrections 2
	momentumRelaxation 1
	pressureCorrectionRelaxation 0.7
}

LinearAlgebra
{
  uEqn
  {
    lib petsc
    preconditioner sor
  }

  pEqn
  {
    lib petsc
    preconditioner lu
  }
}

Properties
{
	rho 1.2
	mu 1e-2
	g (0,0)
	gamma 0.001
}

Grid
{
	type rectilinear
	nCellsX 160
	nCellsY 80

	; Rectilinear parameters
	width 0.8
	height 0.4
}

Viewer
{
	type tecplot
	vectorFields u,gradP
	scalarFields p,pCorr,m
}

System
{
  fileWriteFrequency 10
}
