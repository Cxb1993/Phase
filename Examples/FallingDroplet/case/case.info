; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1.5e-3
	maxCo 0.2
	maxTime 0.8

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.0201
}

Properties
{
	rho1 0.1
	rho2 1
	mu1 0.002
	mu2 0.01
	sigma 0.07
	g (0,-9.8065)
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.02
	spacingY 0.02
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
