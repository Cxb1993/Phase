; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 2.75e-4
	maxCo 0.3
	maxTime 1

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.25
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.0001
	surfaceTensionModel CELESTE
}

Properties
{
	rho1 958
	rho2 998
 	mu1 9e-3
	mu2 8.94e-4
	sigma 0.0262
	g (0,-9.8065)

	advancingContactAngle 120
	recedingContactAngle 120
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.00005
	spacingY 0.00005
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu,gammaTilde
}

System
{
  fileWriteFrequency 20
  consoleOutputFrequency 1
}
