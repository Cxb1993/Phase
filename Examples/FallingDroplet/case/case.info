; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-2
	maxCo 0.3
	maxTime 10

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.0015
}

Properties
{
	rho1 958
	rho2 998
 	mu1 9e-3
	mu2 8.94e-4
	sigma 0.0262
	g (0,-9.8065)

	advancingContactAngle 110
	recedingContactAngle 70
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.0005
	spacingY 0.0005
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu,gammaTilde
}

System
{
  fileWriteFrequency 50
  consoleOutputFrequency 1
}
