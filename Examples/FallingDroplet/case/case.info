; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-4
	maxCo 0.3
	maxTime 2

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.028
}

Properties
{
	rho1 1.225
	rho2 998
 	mu1 0.001
	mu2 0.0001
	sigma 0.0762
	g (0,-9.8065)

	advancingContactAngle 150
	recedingContactAngle 150
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.02
	spacingY 0.02
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
