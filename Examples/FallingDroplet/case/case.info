; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-4
	maxCo 0.3
	maxTime 1

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 1
	numPressureCorrections 2

	smoothingKernelRadius 0.0001
	surfaceTensionModel CELESTE
}

Properties
{
	rho1 958
	rho2 998
 	mu1 9e-3
	mu2 8.94e-4
	sigma 0.0262
	g (0,-9.8065)

	advancingContactAngle 110
	recedingContactAngle 110
}

Grid
{
	type rectilinear
	nCellsX 100
	nCellsY 50
	width 0.005
	height 0.0025
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu,gammaTilde
}

System
{
  fileWriteFrequency 15
  consoleOutputFrequency 1
}
