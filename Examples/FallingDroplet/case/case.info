; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-4
	maxCo 0.3
	maxTime 0.4

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.25
	numInnerIterations 2
	numPressureCorrections 2

	smoothingKernelRadius 0.001001
}

Properties
{
	rho1 1
	rho2 10
 	mu1 1.81e-5
	mu2 8.94e-4
	sigma 0.0762
	g (0,-9.8065)

	advancingContactAngle 110
	recedingContactAngle 110
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.0005
	spacingY 0.0005
}

Viewer
{
	type tecplot
	vectorFields u,n,ft
	scalarFields p,pCorr,m,gamma,rho,mu,gammaTilde
}

System
{
  fileWriteFrequency 100
  consoleOutputFrequency 1
}
