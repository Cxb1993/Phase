; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-4
	maxCo 0.3
	maxTime 1

	momentumRelaxation 1
	pressureCorrectionRelaxation 1
	numInnerIterations 1
	numPressureCorrections 2

	smoothingKernelRadius 0.0001
	surfaceTensionModel CELESTE
}

LinearAlgebra
{
  uEqn
  {
    lib hypre
    preconditioner pilut
    maxIterations 50
    tolerance 1e-6
    iluFill 1
  }

  pCorrEqn
  {
    lib hypre
    preconditioner pilut
    maxIterations 500
    tolerance 1e-6
    iluFill 3
  }

  gammaEqn
  {
    lib hypre
    preconditioner pilut
    maxIterations 20
    tolerance 1e-13
    iluFill 1
  }
}

Properties
{
	rho1 750
	rho2 998
 	mu1 9e-3
	mu2 8.94e-4
	sigma 0.0262
	g (0,-9.8065)

	advancingContactAngle 45
	recedingContactAngle 45
}

Grid
{
	type rectilinear
	nCellsX 100
	nCellsY 50
	width 0.005
	height 0.0025
}

Viewer
{
	type tecplot
	vectorFields u,n,ft,gradRho
	scalarFields p,pCorr,m,gamma,rho,mu,kappa
}

Integrators
{
  VolumeIntegrators
  {
    fields gamma
    cellGroups fluid
  }
}

System
{
  fileWriteFrequency 100
  consoleOutputFrequency 1
}
