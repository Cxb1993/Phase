; Test case for the 2D immersed boundary airfoil

CaseName ImmersedBoundaryAirfoil2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-4
	maxCo 0.8
	maxTime 10

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 1
	numPressureCorrections 1
	smoothingKernelRadius 0.0401
}

LinearAlgebra
{
	uEqn
	{
		lib Eigen3
		maxIteratons 10
		tolerance 1e-6
		iluFill 0
	}

	pEqn
	{
		lib Eigen3
		maxIterations 200
		tolerance 1e-6
		iluFill 4
	}
}

Properties
{
	rho 1.225
	mu 1.81e-5
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 240
	nCellsY 160

	; Rectilinear parameters
	width 3
	height 2
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields cell_status,p,pCorr,m
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
