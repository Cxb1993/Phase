; Test case for the 2D immersed boundary airfoil

CaseName ImmersedBoundaryAirfoil2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 2e-4
	maxCo 0.8
	maxTime 10

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 1
	numPressureCorrections 1
	smoothingKernelRadius 0.0401
}

LinearAlgebra
{
	uEqn
	{
		lib petsc
		preconditioner pilut
		maxIteratons 10
		tolerance 1e-5
		iluFill 0
		maxPreconditionerUses 30
	}

	pEqn
	{
		lib petsc
		preconditioner pilut
		maxIterations 500
		tolerance 1e-4
		iluFill 100
		maxPreconditionerUses 30
	}
}

Properties
{
	rho 1.225
	mu 1.81e-5
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 240
	nCellsY 160

	; Rectilinear parameters
	width 3
	height 2
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields cellStatus,p,pCorr,m
}

System
{
  fileWriteFrequency 50
  consoleOutputFrequency 1
}
