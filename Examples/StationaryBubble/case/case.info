; Test case for the 2D stationary bubble

CaseName StationaryBubble2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-2
	maxCo 0.25
	maxTime 25

	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
	numInnerIterations 1
	numPressureCorrections 1

	smoothingKernelRadius 0.02
}

Properties
{
	rho1 1
	rho2 0.1
	mu1 0.01
	mu2 0.002
	sigma 0.07
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u,n
	scalarFields p,pCorr,m,gamma,rho,mu,kappa,gammaTilde
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
