; Test case for the 2D stationary bubble

CaseName StationaryBubble2D

Solver
{
	timeDependent Off
	maxIterations 100
	timeStep 0.01
	maxTime 10

	momentumRelaxation 0.5
	pressureCorrectionRelaxation 0.5
}

Properties
{
	rho1 1
	rho2 1
	mu1 0.001
	mu2 0.01
	sigma 0.07
	g (0,-9.81)
}

Grid
{
	type rectilinear
	nCellsI 50
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.02
	spacingY 0.02
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m,gamma
}
