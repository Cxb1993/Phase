; Test case for the 2D flat plate

CaseName FlatPlate2D

Solver
{
	timeDependent Off
	maxIterations 100
	timeStep 0.01
	maxTime 30
}

LinearAlgebra
{
	phiEqn
	{
		lib petsc
		preconditioner boomeramg
	}
}

Properties
{
	gamma 1
}

Grid
{
	type rectilinear
	nCellsX 400
	nCellsY 400

	; Rectilinear parameters
	width 1
	height 1
}

Viewer
{
	type tecplot
	vectorFields
	scalarFields phi
}
