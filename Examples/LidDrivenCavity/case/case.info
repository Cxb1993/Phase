; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 0.1
	maxTime 100
	maxCo 10
	numInnerIterations 1
	numPressureCorrections 1
	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
}

LinearAlgebra
{
  uEqn
  {
    maxIterations 15
    tolerance 1e-12
    iluFill 1
  }

  pCorrEqn
  {
    maxIterations 250
    tolerance 1e-10
    iluFill 3
  }

  pEqn
  {
    maxIterations 250
    tolerance 1e-12
    iluFill 4
  }

  CoupledEqn
  {
    maxIterations 1000
    tolerance 1e-12
  }
}

Properties
{
	rho 1
	mu 1e-2
	g (0,0)
	gamma 0.0001
}

Grid
{
	type rectilinear
	nCellsX 100
	nCellsY 100
	width 1
	height 1
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m
}

System
{
	fileWriteFrequency 10
}
