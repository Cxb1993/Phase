; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1
	maxTime 500
	maxCo 1e12
	numInnerIterations 1
	numPressureCorrections 1
	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
}

Properties
{
	rho 1
	mu 1e-3
	g (0,0)
	gamma 0.0001
}

Grid
{
	type rectilinear
	nCellsI 200
	nCellsJ 200

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m
}

System
{
	fileWriteFrequency 1
}
