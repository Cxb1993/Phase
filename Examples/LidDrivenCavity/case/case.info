; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	type Poisson
	timeDependent Off
	maxIterations 100
	timeStep 1e-2
	maxTime 1

	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
}

Properties
{
	rho 1.2
	mu 1e-2
	g (0,-9.81)
}

Grid
{
	type rectilinear
	nCellsI 200
	nCellsJ 200

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u,gradP
	scalarFields p,pCorr,m
}
