; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	type Poisson
	timeDependent Off
	maxIterations 100
	timeStep 0.01
	maxTime 0.25

	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
}

Properties
{
	rho 1
	mu 1e-1
	g (0,-9.81)
	gamma 0.001
}

Grid
{
	type rectilinear
	nCellsI 50
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u,gradP
	scalarFields p,pCorr,m
}
