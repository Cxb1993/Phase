; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	type Poisson
	timeDependent Off
	maxIterations 100
	timeStep 1
	maxTime 100

	momentumRelaxation 0.7
	pressureCorrectionRelaxation 0.3
}

Properties
{
	rho 1.2
	mu 1e-3
	g (0,-9.81)
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u,gradP
	scalarFields p,pCorr,m
}
