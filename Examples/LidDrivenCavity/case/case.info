; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1
	maxTime 100
	maxCo 1e12
	numInnerIterations 1
	numPressureCorrections 1
	momentumRelaxation 0.9
	pressureCorrectionRelaxation 0.1
}

Properties
{
	rho 1
	mu 0.1
	g (0,0)
	gamma 0.001
}

Grid
{
	type rectilinear
	nCellsI 100
	nCellsJ 100

	; Rectilinear parameters
	spacingX 0.01
	spacingY 0.01
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m
}

System
{
	fileWriteFrequency 1
}
