; Test case for the 2D lid driven cavity

CaseName LidDrivenCavity2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e9
	maxTime 1e12
	maxCo 1e12
	numInnerIterations 1
	numPressureCorrections 1
	momentumRelaxation 0.9
	pressureCorrectionRelaxation 0.1
}

Properties
{
	rho 1
	mu 0.01
	g (0,0)
	gamma 0.001
}

Grid
{
	type rectilinear
	nCellsI 50
	nCellsJ 50

	; Rectilinear parameters
	spacingX 0.02
	spacingY 0.02
}

Viewer
{
	type tecplot
	vectorFields u
	scalarFields p,pCorr,m
}

System
{
	fileWriteFrequency 10
}
